doctype html
html
  head
    -if (title)
      title #{title}
    -else 
      title 404 Not Found
    link(rel="icon", type="image/png", href="/images/brain-square-inverse.png")
    // font awesome
    link(rel='stylesheet', href='/stylesheets/all.min.css')
    // stylesheets 
    link(rel='stylesheet', href='/stylesheets/fonts.css')
    link(rel='stylesheet', href='/stylesheets/colors.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/layout.css')
    link(rel='stylesheet', href='/stylesheets/main/home.css')
    link(rel='stylesheet', href='/stylesheets/challenge/challenges.css')
    link(rel='stylesheet', href='/stylesheets/results/results.css')
    link(rel='stylesheet', href='/stylesheets/auth/auth.css')
    // scripts
    script(src="/javascripts/challenges.js" defer)
    script(src="/javascripts/renderResults.js" defer)
  body
    include ./challenge/challenges
    .main-container
      nav
        .nav-buttons 
          a.nav-text(href="/") Home
          a.nav-text(href="/challenge") Challenge
          a.nav-text(href="/results") Results
          a.nav-text(href="/about") About
          -if (user)
            .navright
              a.nav-text(href="/auth/account") Account&nbsp;&nbsp;
                i.fa-solid.fa-user
              form(action="/auth/logout", method="POST")
                button.nav-button(type="submit") Logout&nbsp;&nbsp;
                  i.fa-solid.fa-right-from-bracket 
          -else
            .navright
              a.nav-text(href="/auth/register") Register&nbsp;&nbsp;
                i.fa-solid.fa-user-plus
              a.nav-text(href="/auth/login") Login&nbsp;&nbsp;
                i.fa-solid.fa-right-to-bracket 
              
            
      .content
        block content
    footer 
        ul.footer-list
          li 
            a.footer-text(href="/") Home
          li 
            a.footer-text(href="/challenge")  Challenge
          li 
            a.footer-text(href="/results")  Results
          li 
            a.footer-text(href="/about")  About
          br
          p.footer-text &copy; Website 2023

